@model ChuteCampeao.MVC.ViewModels.TimeVM

@{
    ViewBag.Title = "Editar Time";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row align-items-center">
    <div class="col col-10">
        <h1>Editar Time</h1>
    </div>
    <div class="col col-2 ">
        <a href='@Url.Action("Index", "Time")' class="btn btn-primary float-right" role="button">
            <i class="far fa-list-alt"></i>&ensp;Times
        </a>
    </div>
</div>
<hr class="my-2">
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group row">
            @Html.LabelFor(model => model.NomeCompleto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.NomeCompleto, new { @class = "form-control form-control-sm", placeholder = "Nome Completo", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.NomeCompleto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.NomeAbreviado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.NomeAbreviado, new { @class = "form-control form-control-sm", placeholder = "Nome Abreviado", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.NomeAbreviado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Apelido, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.Apelido, new { @class = "form-control form-control-sm", placeholder = "Apelido", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Apelido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.DataFundacao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.DataFundacao, Convert.ToDateTime(Model.DataFundacao).ToShortDateString(), new { @class = "form-control form-control-sm", placeholder = "dd/mm/yyyy", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.DataFundacao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.EstadioId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.EstadioId, Model.ListaEstadios, "Selecione", htmlAttributes: new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(model => model.EstadioId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.Status, Model.LstStatus, "Selecione", htmlAttributes: new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12">
                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-outline-secondary float-left", role = "button" })
                <input type="submit" value="Salvar" class="btn btn-success float-right" />
            </div>
        </div>
    </div>
}
@Scripts.Render("~/bundles/time")
